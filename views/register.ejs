<% include ./partials/header.ejs%>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-[25vw] bg-white px-20 py-10 rounded-[30px]">
    <h1
      class="text-2xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none mb-6"
    >
      Create New Account
    </h1>
    <form action="/register" method="post">
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="text"
        name="fullname"
        placeholder="Full Name"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="email"
        name="email"
        placeholder="email"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="number  "
        name="contact"
        placeholder="contact"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="password"
      />

      <input
        class="border-2 block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full"
        type="submit"
        value="Sign Up"
      />
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 w-2/3 mx-auto text-center"
      >
        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Dolores labore
        repudiandae quos iure laudantium.
      </p>
    </form>
    <a
      class="inline-block mt-7 text-sm text-zinc-700 text-center font-semibold w-full"
      href="/"
      >Login to existing Account
    </a>
  </div>
</div>
<% include ./partials/footer.ejs%>
